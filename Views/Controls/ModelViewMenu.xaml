<UserControl
    x:Class="RHToolkit.Views.Controls.ModelViewMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RHToolkit.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:RHToolkit.Models.Model3D"
    xmlns:rs="clr-namespace:RHToolkit.Properties"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:windows="clr-namespace:RHToolkit.ViewModels.Windows"
    d:DataContext="{d:DesignInstance Type=models:ModelViewManager}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu
            Grid.Row="0"
            VerticalAlignment="Top"
            FontSize="14"
            Foreground="White">
            <ui:MenuItem Header="{x:Static rs:Resources.MenuFile}" Icon="{ui:SymbolIcon DocumentSplitHint20}">
                <MenuItem
                    Command="{Binding LoadCommand}"
                    Header="{x:Static rs:Resources.MenuOpenFile}"
                    Icon="{ui:SymbolIcon DocumentAdd24}"
                    InputGestureText="Ctrl+O" />
                <MenuItem
                    Command="{Binding CloseFileCommand}"
                    Header="{x:Static rs:Resources.MenuCloseFile}"
                    Icon="{ui:SymbolIcon DocumentDismiss24}"
                    InputGestureText="Ctrl+W" />
                <Separator />
                <MenuItem Header="{x:Static rs:Resources.MenuExportAs}" Icon="{ui:SymbolIcon DocumentSave24}">
                    <MenuItem
                        Command="{Binding ExportAsCommand}"
                        Header="Export Current File to FBX"
                        Icon="{ui:SymbolIcon DocumentSave24}"
                        InputGestureText="Ctrl+S" />
                    <MenuItem
                        Command="{Binding ImportFromFbxCommand}"
                        Header="Export FBX to MMP (WIP)"
                        Icon="{ui:SymbolIcon DocumentSave24}"
                        InputGestureText="Ctrl+Shift+S" />
                </MenuItem>
                <Separator />
                <MenuItem
                    Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Header="{x:Static rs:Resources.MenuExit}"
                    Icon="{ui:SymbolIcon ArrowExit20}" />
            </ui:MenuItem>
            <Separator />
            <ui:MenuItem Header="Draw" Icon="{ui:SymbolIcon DocumentSplitHint20}">
                <CheckBox
                    Content="Display Mesh"
                    IsChecked="{Binding ShowMeshSolid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Display textured meshes" />
                <CheckBox
                    Content="Display Bones"
                    IsChecked="{Binding ShowBones, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Display armature" />
                <CheckBox
                    Content="Display Wireframe"
                    IsChecked="{Binding ShowMeshWireframe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Display Mesh Wireframe" />
                <CheckBox
                    Content="Nav Mesh Wireframe"
                    IsChecked="{Binding ShowNaviWireframe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Nav Mesh Wireframe"
                    Visibility="{Binding IsNavMeshControlsVisible}" />
                <CheckBox
                    Content="Nav Mesh Octree"
                    IsChecked="{Binding ShowNaviDebug, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Debug View"
                    Visibility="{Binding IsNavMeshControlsVisible}" />
            </ui:MenuItem>
            <Separator />
            <ui:MenuItem Header="Export Options" Icon="{ui:SymbolIcon DocumentSplitHint20}">
                <CheckBox
                    Content="Embed Textures"
                    IsChecked="{Binding EmbedTextures, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Embed Textures in the fbx" />
                <CheckBox
                    Content="Export Animations (WIP)"
                    IsChecked="{Binding ExportAnimation, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource lb_checkbox}"
                    ToolTip="Export animations (.ds, .ma)" />
            </ui:MenuItem>
            <Separator />
            <ui:MenuItem Header="About" Icon="{ui:SymbolIcon ChatHelp20}">
                <ui:HyperlinkButton
                    Margin="8,0,0,0"
                    Padding="4"
                    Content="File Formats"
                    NavigateUri="https://juniordark.gitbook.io/rusty-hearts-files-structures"
                    ToolTip="https://juniordark.gitbook.io/rusty-hearts-files-structures" />
            </ui:MenuItem>
        </Menu>
        <Menu
            Grid.Row="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="14"
            Foreground="White">
            <MenuItem
                Command="{Binding LoadCommand}"
                Icon="{ui:SymbolIcon DocumentAdd24,
                                     Filled=True}"
                ToolTip="{x:Static rs:Resources.MenuOpenFile}" />
            <MenuItem
                Command="{Binding CloseFileCommand}"
                Icon="{ui:SymbolIcon DocumentDismiss24,
                                     Filled=True}"
                ToolTip="{x:Static rs:Resources.MenuCloseFile}" />
            <MenuItem
                Command="{Binding ExportAsCommand}"
                Icon="{ui:SymbolIcon DocumentSave24,
                                     Filled=True}"
                ToolTip="{x:Static rs:Resources.MenuExportAs}" />
            <Separator />
        </Menu>
    </Grid>
</UserControl>
