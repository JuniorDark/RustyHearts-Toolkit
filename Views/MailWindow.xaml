<Window x:Class="RHGMTool.Views.MailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RHGMTool.ViewModels"
        xmlns:view="clr-namespace:RHGMTool.Views"
        vm:WindowBehaviors.EnableDragMove="True"
        vm:WindowBehaviors.EnableDoubleClickMaximize="True"
        Title="Rusty Hearts Mail Tool" Height="600" Width="640" ResizeMode="CanResizeWithGrip" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen" Background="Transparent" MinWidth="640" MinHeight="600" Icon="/Assets/ico/icon_mail.png">

    <ContentControl Template="{StaticResource RHWindowRed02Template}">
        <Grid Margin="-70,-80,-80,-80" >

            <!-- Sender Label -->
            <Label Content="Sender" Foreground="Gold" Margin="-221,76,242,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

            <!-- Sender TextBox -->
            <TextBox x:Name="tbSender" Template="{StaticResource lb_textbox}" Background="Black" BorderThickness="0" Foreground="Gold" Text="GameMaster" Margin="124,77,242,0" VerticalAlignment="Top" Height="31" Width="264"/>

            <!-- Recipient Label -->
            <Label Content="Recipient(s)" Foreground="Gold" Margin="-221,42,242,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

            <!-- Recipient TextBox -->
            <TextBox x:Name="txtRecipient" Template="{StaticResource lb_textbox}" Background="Black" BorderThickness="0" Foreground="Gold" Margin="124,42,242,0" VerticalAlignment="Top" Width="264" Height="31"/>

            <!-- Gold Label -->
            <Label Content="Attach Gold Amount" Foreground="Gold" Margin="27,393,484,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="119" Height="25"/>

            <!-- Send To All CheckBox -->
            <CheckBox x:Name="chkSendToAll" Template="{StaticResource lb_checkbox}" Content="Send to All Characters" Foreground="#FFFFDE00" Margin="411,45,62,0"
           VerticalAlignment="Top" Height="19" Width="157">
                <CheckBox.Background>
                    <ImageBrush/>
                </CheckBox.Background>
            </CheckBox>

            <!-- Return Date Label -->
            <Label Content="Return Date" Foreground="Coral" Margin="25,449,516,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

            <!-- Item Charge Label -->
            <Label Content="Item Charge" Foreground="Coral" Margin="25,505,510,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>

            <!-- Attach Item Label -->
            <Label Content="Attach Item" Foreground="Gold" Margin="12,342,504,0" VerticalAlignment="Top" FontSize="14" HorizontalContentAlignment="Center" Width="114" Height="28"/>

            <!-- Load Template Button -->
            <Button x:Name="btnLoadTemplate" Content="Load Template" Foreground="White" Background="Transparent"
         Margin="432,159,62,0" VerticalAlignment="Top" Height="26" Style="{StaticResource lb_def_button02}" Width="137"/>

            <!-- Clear Button -->
            <Button x:Name="btnClear" Content="Clear" Foreground="White" Background="Transparent"
         Margin="431,197,62,0" VerticalAlignment="Top" Height="26" Style="{StaticResource lb_def_button02}" Width="137"/>

            <!-- Save Template Button -->
            <Button x:Name="btnSaveTemplate" Content="Save Template" Background="Transparent"
         Margin="432,121,62,0" VerticalAlignment="Top" Height="26" Style="{StaticResource lb_def_button02}" Foreground="White" Width="137"/>

            <!-- Message Panel -->
            <TextBox x:Name="txtMailContent" BorderThickness="0" Text="Game Master InsertItem" Margin="52,119,236,0" VerticalAlignment="Top" Height="205" Width="342"
          ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <TextBox.Background>
                    <ImageBrush ImageSource="/Assets/images/lb_mail_paper.png"/>
                </TextBox.Background>
            </TextBox>

            <!-- Send Button -->
            <Button x:Name="btnSend" Content="Send" Foreground="White" Background="Transparent"
         Margin="229,0,260,39" VerticalAlignment="Bottom" Height="26" Style="{StaticResource lb_def_button02}" Width="137"/>

            <!-- Close Button -->
            <Button x:Name="btnClose" 
        Content="" 
        VerticalAlignment="Top" 
        HorizontalAlignment="Right" 
        Margin="0,10,15,0" 
        Height="19" 
        Width="19" 
        Template="{StaticResource lb_close_button}" 
        vm:WindowBehaviors.CloseWindowOnClick="True"/>
            <Image Margin="154,425,452,0" VerticalAlignment="Top" Source="/Assets/images/lb_ac_icon_gold.png" Stretch="None"/>
            <Image Margin="109,350,499,0" VerticalAlignment="Top" Source="/Assets/icon/icon_help_tip.png" Stretch="None">
                <Image.ToolTip>
                    <!-- Tooltip content -->
                    <ToolTip>
                        <TextBlock Text="Help Tooltip Content"/>
                    </ToolTip>
                </Image.ToolTip>
                <!-- Cursor change -->
                <Image.Cursor>
                    <Cursor>Help</Cursor>
                </Image.Cursor>
            </Image>
            <Image x:Name="imgHelp" 
       Margin="34,48,580,0" 
       VerticalAlignment="Top" 
       Source="/Assets/icon/icon_help_tip.png" 
       Stretch="None" Height="16" Width="16">
                <Image.ToolTip>
                    <!-- Tooltip content -->
                    <ToolTip>
                        <TextBlock Text="Help Tooltip Content"/>
                    </ToolTip>
                </Image.ToolTip>
                <!-- Cursor change -->
                <Image.Cursor>
                    <Cursor>Help</Cursor>
                </Image.Cursor>
            </Image>
            <Image Margin="146,340,434,0" VerticalAlignment="Top" Source="/Assets/images/lb_ac_icon.png" Stretch="None"/>
            <Label x:Name="lbTitle" 
       Content="Rusty Hearts Mail Tool" 
       HorizontalAlignment="Center" 
       VerticalAlignment="Top" 
       Foreground="White" 
       FontSize="16" 
       FontWeight="Bold" 
       Height="31" 
       Width="191" 
       Margin="0,3,0,0"/>
            <Image Margin="203,340,377,0" VerticalAlignment="Top" Source="/Assets/images/lb_ac_icon.png" Stretch="None"/>
            <Image Margin="262,340,318,0" VerticalAlignment="Top" Source="/Assets/images/lb_ac_icon.png" Stretch="None"/>
            <Image Margin="154,531,452,0" VerticalAlignment="Top" Source="/Assets/images/lb_ac_icon_gold.png" Stretch="None"/>
            <ScrollBar Style="{DynamicResource CustomScrollBarStyle}" Minimum="0" Maximum="100" HorizontalAlignment="Left" Margin="371,131,0,0" VerticalAlignment="Top" Height="181"/>

        </Grid>
    </ContentControl>
</Window>
