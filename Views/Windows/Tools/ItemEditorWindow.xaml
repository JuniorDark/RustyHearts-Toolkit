<Window
    x:Class="RHToolkit.Views.Windows.ItemEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bh="clr-namespace:RHToolkit.Behaviors"
    xmlns:control="clr-namespace:RHToolkit.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RHToolkit.Utilities.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="clr-namespace:RHToolkit.Properties"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:windows="clr-namespace:RHToolkit.ViewModels.Windows"
    Title="{Binding Title}"
    MinWidth="1280"
    MinHeight="720"
    MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}}"
    bh:WindowBehaviors.EnableDragMove="True"
    d:DataContext="{d:DesignInstance Type=windows:ItemEditorViewModel}"
    d:MaxHeight="720"
    d:MaxWidth="1280"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Assets/icon/icon_cash_optionchange.png"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding
            Command="{Binding LoadFileCommand}"
            CommandParameter="1"
            Gesture="Ctrl+Shift+1" />
        <KeyBinding
            Command="{Binding LoadFileCommand}"
            CommandParameter="2"
            Gesture="Ctrl+Shift+2" />
        <KeyBinding
            Command="{Binding LoadFileCommand}"
            CommandParameter="3"
            Gesture="Ctrl+Shift+3" />
        <KeyBinding
            Command="{Binding LoadFileCommand}"
            CommandParameter="4"
            Gesture="Ctrl+Shift+4" />
        <KeyBinding Command="{Binding LoadFileCommand}" Gesture="Ctrl+O" />
        <KeyBinding Command="{Binding LoadFileAsCommand}" Gesture="Ctrl+Shift+O" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileCommand}" Gesture="Ctrl+S" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileAsCommand}" Gesture="Ctrl+Alt+S" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileAsMIPCommand}" Gesture="Ctrl+Shift+S" />
        <KeyBinding Command="{Binding CloseFileCommand}" Gesture="Ctrl+W" />
        <KeyBinding
            Command="{Binding OpenSearchDialogCommand}"
            CommandParameter="Find"
            Gesture="Ctrl+F" />
        <KeyBinding
            Command="{Binding OpenSearchDialogCommand}"
            CommandParameter="Replace"
            Gesture="Ctrl+H" />
    </Window.InputBindings>
    <ContentControl Template="{StaticResource box_green02}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ui:TitleBar
                x:Name="TitleBar"
                Title="{Binding Title}"
                Grid.ColumnSpan="3"
                Height="30"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                d:Title="Item Editor"
                ButtonsForeground="White"
                FontSize="15"
                Foreground="White">
                <ui:TitleBar.Icon>
                    <ui:ImageIcon
                        Width="16"
                        Height="16"
                        Margin="0,-1,0,-3"
                        Source="/Assets/icon/icon_cash_optionchange.png" />
                </ui:TitleBar.Icon>
            </ui:TitleBar>

            <control:ItemEditorMenu Grid.Row="1" Grid.Column="0" />

            <!--  Frame Controls  -->
            <ScrollViewer
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Style="{StaticResource lb_scrollviewer}"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <control:ItemFrame
                        x:Name="itemFrame"
                        Width="300"
                        Height="Auto"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        DataContext="{Binding ItemDataManager.ItemDataViewModel}"
                        Visibility="{Binding DataContext.ItemType, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ValueToVisibilityConverter}, ConverterParameter=1}" />
                    <control:CostumeFrame
                        x:Name="costumeFrame"
                        Width="300"
                        Height="Auto"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        DataContext="{Binding ItemDataManager.ItemDataViewModel}"
                        Visibility="{Binding DataContext.ItemType, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ValueToVisibilityConverter}, ConverterParameter=2}" />
                    <control:GearFrame
                        x:Name="gearFrame"
                        Width="300"
                        Height="Auto"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        DataContext="{Binding ItemDataManager.ItemDataViewModel}"
                        Visibility="{Binding DataContext.ItemType, RelativeSource={RelativeSource AncestorType=Window}, Converter={StaticResource ValueToVisibilityConverter}, ConverterParameter=3|4}" />
                </Grid>
            </ScrollViewer>

            <!--  Controls  -->
            <Grid
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="2">
                <UniformGrid Columns="2">
                    <FrameworkElement x:Name="c1" />
                </UniformGrid>
                <TabControl
                    Margin="0,0,0,0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Visibility="{Binding IsSelectedItemVisible}">
                    <TabItem
                        x:Name="tab1"
                        Width="{Binding ElementName=c1, Path=ActualWidth}"
                        Foreground="White"
                        Header="{x:Static rs:Resources.ItemEditor_ItemData}"
                        Style="{StaticResource lb_tab}">
                        <Grid>
                            <UniformGrid Columns="3">
                                <FrameworkElement x:Name="c2" />
                            </UniformGrid>
                            <TabControl Margin="0,0,0,0">
                                <TabItem
                                    Width="{Binding ElementName=c2, Path=ActualWidth}"
                                    Foreground="White"
                                    Header="{x:Static rs:Resources.ItemEditor_ItemInfo}"
                                    Style="{StaticResource lb_tab}">
                                    <Grid HorizontalAlignment="Center">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Margin="5,0,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.ID}" />
                                            <ui:NumberBox
                                                Width="Auto"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Maximum="2147483647"
                                                Minimum="0"
                                                Value="{Binding DataTableManager.SelectedItem[nID], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="nID" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </ui:NumberBox>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.Icon}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                d:Text="Icon"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding DataTableManager.SelectedItem[szIconName], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="szIconName" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_Name}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                d:Text="{x:Static rs:Resources.Name}"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding DataTableManager.SelectedItemString[wszDesc], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="wszDesc" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemStringValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="4"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_Description}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="150"
                                                Margin="0,0,0,0"
                                                d:Text="{x:Static rs:Resources.Description}"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding DataTableManager.SelectedItemString[wszItemDescription], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                TextWrapping="Wrap">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="wszItemDescription" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemStringValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>

                                        <StackPanel
                                            Grid.Row="3"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_InternalName}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                d:Text="{x:Static rs:Resources.Name}"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding DataTableManager.SelectedItem[wszDesc], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="wszDesc" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="4"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_InternalDescription}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="150"
                                                Margin="0,0,0,0"
                                                d:Text="{x:Static rs:Resources.Description}"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding ItemDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                TextWrapping="Wrap" />
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="5"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Center"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.ItemEditor_GroupName}" />
                                            <TextBox
                                                Width="Auto"
                                                Height="30"
                                                Margin="0,0,0,0"
                                                d:Text="Group Name"
                                                FontSize="12"
                                                Template="{StaticResource lb_textbox11}"
                                                Text="{Binding DataTableManager.SelectedItemString[wszGroupName], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="wszGroupName" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemStringValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </TextBox>
                                        </StackPanel>
                                    </Grid>
                                </TabItem>
                                <TabItem
                                    Width="{Binding ElementName=c2, Path=ActualWidth}"
                                    Foreground="White"
                                    Header="{x:Static rs:Resources.ItemEditor_ItemData}"
                                    Style="{StaticResource lb_tab}">
                                    <ScrollViewer
                                        Margin="0,0,0,0"
                                        HorizontalScrollBarVisibility="Auto"
                                        Style="{StaticResource lb_scrollviewer}"
                                        VerticalScrollBarVisibility="Auto"
                                        Visibility="{Binding IsSelectedItemVisible}">
                                        <Grid HorizontalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.AddEffectFilter}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <TextBox
                                                    Width="250"
                                                    Height="35"
                                                    CaretBrush="White"
                                                    FontFamily="{StaticResource ArialUnicodeMS}"
                                                    FontSize="12"
                                                    Foreground="Gold"
                                                    Tag="{x:Static rs:Resources.OptionNameID}"
                                                    Template="{StaticResource lb_textbox}"
                                                    Text="{Binding AddEffectSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_AddEffectID01}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.AddEffectItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nAddEffectID], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nAddEffectID" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_AddEffectID02}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.AddEffectItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nAddEffectID01], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nAddEffectID01" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Content="{x:Static rs:Resources.Category}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.CategoryFilterItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nCategory], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nCategory" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="2"
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Content="{x:Static rs:Resources.SubCategory}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.SubCategoryItemsFilter}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nSubCategory], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nSubCategory" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Center"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemQuality}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.BranchItemsFilter}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nBranch], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nBranch" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="3"
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.Class}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.ClassItemsFilter}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nJobClass], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nJobClass" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_InventoryType}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.InventoryTypeItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nInventoryType], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nInventoryType" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="4"
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_AuctionCategory}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding AuctionCategoryItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nAuctionCategory], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nAuctionCategory" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel
                                                Grid.Row="5"
                                                Grid.Column="0"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_CostumePackID}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="250"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding CostumePackItems}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nCostumePackID], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nCostumePackID" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel
                                                Grid.Row="5"
                                                Grid.Column="1"
                                                Margin="5,0,0,0"
                                                HorizontalAlignment="Left"
