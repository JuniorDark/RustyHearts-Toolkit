                                                </i:Interaction.Behaviors>
                                            </ui:NumberBox>
                                        </StackPanel>
                                        <StackPanel
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Orientation="Vertical">
                                            <TextBlock Foreground="White" Text="{x:Static rs:Resources.ItemEditor_OptionCountMax}" />
                                            <ui:NumberBox
                                                Width="Auto"
                                                Maximum="3"
                                                Minimum="0"
                                                Value="{Binding DataTableManager.SelectedItem[nOptionCountMax], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                <i:Interaction.Behaviors>
                                                    <bh:DataRowViewBehavior Column="nOptionCountMax" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                </i:Interaction.Behaviors>
                                            </ui:NumberBox>
                                        </StackPanel>
                                        <!--  Fixed Option  -->
                                        <Grid
                                            Grid.Row="2"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="3"
                                            Margin="0,0,0,0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <StackPanel
                                                Grid.Row="0"
                                                Grid.ColumnSpan="2"
                                                Margin="0,0,0,10"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    x:Name="lbOptionSearch"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.OptionSearch}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <TextBox
                                                    x:Name="tbOptionSearch"
                                                    Width="300"
                                                    Height="40"
                                                    CaretBrush="White"
                                                    FontFamily="{StaticResource ArialUnicodeMS}"
                                                    FontSize="12"
                                                    Foreground="Gold"
                                                    Tag="{x:Static rs:Resources.OptionNameID}"
                                                    Template="{StaticResource lb_textbox}"
                                                    Text="{Binding ItemDataManager.OptionSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                            <!--  left Column  -->
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="0"
                                                Margin="20,0,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                Orientation="Vertical">
                                                <Label
                                                    x:Name="lbFixedOption1"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_FixedOption01}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="Auto"
                                                    Height="24"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    DisplayMemberPath="Name"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.OptionView}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nFixOption00], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nFixOption00" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                                <Label
                                                    x:Name="lbRandomOption2"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Center"
                                                    Content="{x:Static rs:Resources.ItemEditor_FixedOption02}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ComboBox
                                                    Width="Auto"
                                                    Height="24"
                                                    HorizontalAlignment="Left"
                                                    VerticalAlignment="Top"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalContentAlignment="Center"
                                                    DisplayMemberPath="Name"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding ItemDataManager.OptionView}"
                                                    SelectedValue="{Binding DataTableManager.SelectedItem[nFixOption01], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nFixOption01" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ComboBox>
                                            </StackPanel>
                                            <!--  Right Column  -->
                                            <StackPanel
                                                Grid.Row="1"
                                                Grid.Column="1"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Left"
                                                Orientation="Vertical">
                                                <Label
                                                    x:Name="lbRandomOptionValue1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Content="{Binding Source={x:Static rs:Resources.Value}, Converter={StaticResource StringFormatConverter}, ConverterParameter=1}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ui:NumberBox
                                                    x:Name="intOptionValue1"
                                                    Width="Auto"
                                                    Maximum="10000"
                                                    Minimum="0"
                                                    Value="{Binding DataTableManager.SelectedItem[nFixOptionValue00], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nFixOptionValue00" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ui:NumberBox>
                                                <Label
                                                    x:Name="lbRandomOptionValue2"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Top"
                                                    Content="{Binding Source={x:Static rs:Resources.Value}, Converter={StaticResource StringFormatConverter}, ConverterParameter=2}"
                                                    Style="{StaticResource ArialMSWhite}" />
                                                <ui:NumberBox
                                                    x:Name="intOptionValue2"
                                                    Width="Auto"
                                                    Maximum="10000"
                                                    Minimum="0"
                                                    Value="{Binding DataTableManager.SelectedItem[nFixOptionValue01], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                                    <i:Interaction.Behaviors>
                                                        <bh:DataRowViewBehavior Column="nFixOptionValue01" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                                    </i:Interaction.Behaviors>
                                                </ui:NumberBox>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </TabItem>
                            </TabControl>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <!--  Datagrid  -->
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="{Binding IsVisible}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="dataGridView"
                    Grid.Row="0"
                    Width="450"
                    Height="400"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    bh:DataGridBehavior.EnableScrollIntoView="True"
                    bh:DataGridBehavior.SelectedRow="{Binding DataTableManager.SelectedRow}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnWidth="Auto"
                    EnableRowVirtualization="True"
                    HeadersVisibility="Column"
                    HorizontalScrollBarVisibility="Auto"
                    ItemsSource="{Binding DataTableManager.DataTable}"
                    SelectedItem="{Binding DataTableManager.SelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    Template="{StaticResource lb_datagrid}">
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="{Binding DataTableManager.DuplicateSelectedRowCommand}" Header="{x:Static rs:Resources.MenuDuplicateRow}" />
                            <MenuItem Command="{Binding DataTableManager.DeleteSelectedRowCommand}" Header="{x:Static rs:Resources.MenuDeleteRow}" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.InputBindings>
                        <KeyBinding
                            Key="I"
                            Command="{Binding DataTableManager.AddNewRowCommand}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="D"
                            Command="{Binding DataTableManager.DuplicateSelectedRowCommand}"
                            Modifiers="Control" />
                        <KeyBinding Key="Delete" Command="{Binding DataTableManager.DeleteSelectedRowCommand}" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataTableManager.UndoChangesCommand}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataTableManager.RedoChangesCommand}"
                            Modifiers="Ctrl+Shift" />
                        <KeyBinding
                            Key="F"
                            Command="{Binding OpenSearchDialogCommand}"
                            CommandParameter="Find"
                            Modifiers="Ctrl" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding nID}"
                            Header="ID"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding wszDesc}"
                            Header="{x:Static rs:Resources.Name}"
                            IsReadOnly="True">
                            <DataGridTextColumn.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="Foreground" Value="White" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding nBranch}" Value="0">
                                            <Setter Property="Foreground" Value="White" />
                                            <!--  Set foreground color for Branch 0  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="1">
                                            <Setter Property="Foreground" Value="White" />
                                            <!--  Set foreground color for Branch 1  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="2">
                                            <Setter Property="Foreground" Value="#2adf00" />
                                            <!--  Set foreground color for Branch 2  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="3">
                                            <Setter Property="Foreground" Value="#2adf00" />
                                            <!--  Set foreground color for Branch 3  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="4">
                                            <Setter Property="Foreground" Value="#009cff" />
                                            <!--  Set foreground color for Branch 4  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="5">
                                            <Setter Property="Foreground" Value="#eed040" />
                                            <!--  Set foreground color for Branch 5  -->
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding nBranch}" Value="6">
                                            <Setter Property="Foreground" Value="#d200f8" />
                                            <!--  Set foreground color for Branch 6  -->
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTextColumn.CellStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Header="{x:Static rs:Resources.Icon}" IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image
                                        Width="36"
                                        Height="36"
                                        Source="{Binding szIconName, Converter={StaticResource IconNameToImageSourceConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock
                    x:Name="lbTotalItem"
                    Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    d:Text="Showing {0}/{1} Items"
                    Foreground="Gold"
                    Style="{StaticResource ArialMS}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{x:Static rs:Resources.DatagridTotalItems}">
                            <Binding ElementName="dataGridView" Path="Items.Count" />
                            <Binding Path="DataTableManager.DataTable.Rows.Count" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
                <!--  Datagrid filter  -->
                <Grid
                    Grid.Row="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Visibility="{Binding IsVisible}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Orientation="Horizontal">
                        <Label
                            x:Name="lbSearch"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Content="{x:Static rs:Resources.Search}"
                            Style="{StaticResource ArialMSWhite}" />
                        <TextBox
                            x:Name="tbSearch"
                            Width="300"
                            Height="40"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            CaretBrush="White"
                            Foreground="Gold"
                            Tag="{x:Static rs:Resources.SearchNameID}"
                            Template="{StaticResource lb_textbox}"
                            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            x:Name="lbCategory"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.Category}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            x:Name="cmbItemCategory"
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            IsEnabled="{Binding ItemDataManager.ItemCategoryEnabled}"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.CategoryFilterItems}"
                            SelectedValue="{Binding ItemCategoryFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            x:Name="lbSubCategory"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.SubCategory}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            x:Name="cmbSubCategory"
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            IsEnabled="{Binding ItemDataManager.ItemSubCategoryEnabled}"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.SubCategoryItemsFilter}"
                            SelectedValue="{Binding ItemSubCategoryFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.ItemEditor_InventoryType}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.InventoryTypeItems}"
                            SelectedValue="{Binding InventoryTypeFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            x:Name="lbQuality"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.ItemQuality}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            x:Name="cmbItemBranch"
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.BranchItemsFilter}"
                            SelectedValue="{Binding ItemBranchFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            x:Name="lbClass"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.Class}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            x:Name="cmbJobClass"
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            IsEnabled="{Binding ItemDataManager.ItemClassEnabled}"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.ClassItemsFilter}"
                            SelectedValue="{Binding ItemClassFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                        <Label
                            x:Name="lbItemTrade"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            HorizontalContentAlignment="Center"
                            Content="{x:Static rs:Resources.ItemTrade}"
                            Style="{StaticResource ArialMSWhite}" />
                        <ComboBox
                            x:Name="cmbItemTrade"
                            Width="145"
                            Height="24"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            IsReadOnly="True"
                            ItemsSource="{Binding ItemDataManager.ItemTradeFilterItems}"
                            SelectedValue="{Binding ItemTradeFilter}"
                            SelectedValuePath="ID"
                            Style="{StaticResource ComboBoxStyle}"
                            Template="{StaticResource lb_combobox}" />
                    </StackPanel>
                </Grid>
            </Grid>

            <TextBlock
                Grid.Row="2"
                Grid.ColumnSpan="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="15"
                Foreground="White"
                Text="{Binding OpenMessage}" />
        </Grid>
    </ContentControl>
</Window>
