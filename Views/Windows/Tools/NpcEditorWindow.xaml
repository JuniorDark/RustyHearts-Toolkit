<Window
    x:Class="RHToolkit.Views.Windows.NpcEditorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bh="clr-namespace:RHToolkit.Behaviors"
    xmlns:control="clr-namespace:RHToolkit.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:RHToolkit.Utilities.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:rs="clr-namespace:RHToolkit.Properties"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:windows="clr-namespace:RHToolkit.ViewModels.Windows"
    Title="{Binding Title}"
    MinWidth="1280"
    MinHeight="720"
    MaxHeight="{Binding Source={x:Static SystemParameters.MaximizedPrimaryScreenHeight}}"
    bh:WindowBehaviors.EnableDragMove="True"
    d:DataContext="{d:DesignInstance Type=windows:NpcEditorViewModel}"
    d:MaxHeight="720"
    d:MaxWidth="1280"
    AllowsTransparency="True"
    Background="Transparent"
    Icon="/Assets/icon/icon_ui_roulette.png"
    ResizeMode="CanResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding Command="{Binding LoadFileCommand}" Gesture="Ctrl+O" />
        <KeyBinding Command="{Binding LoadFileAsCommand}" Gesture="Ctrl+Shift+O" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileCommand}" Gesture="Ctrl+S" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileAsCommand}" Gesture="Ctrl+Alt+S" />
        <KeyBinding Command="{Binding DataTableManager.SaveFileAsMIPCommand}" Gesture="Ctrl+Shift+S" />
        <KeyBinding Command="{Binding CloseFileCommand}" Gesture="Ctrl+W" />
        <KeyBinding
            Command="{Binding OpenSearchDialogCommand}"
            CommandParameter="Find"
            Gesture="Ctrl+F" />
        <KeyBinding
            Command="{Binding OpenSearchDialogCommand}"
            CommandParameter="Replace"
            Gesture="Ctrl+H" />
    </Window.InputBindings>
    <ContentControl Template="{StaticResource box_green02}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <ui:TitleBar
                x:Name="TitleBar"
                Title="{Binding Title}"
                Grid.ColumnSpan="3"
                Height="30"
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                d:Title="NPC Editor"
                ButtonsForeground="White"
                FontSize="15"
                Foreground="White">
                <ui:TitleBar.Icon>
                    <ui:ImageIcon
                        Width="16"
                        Height="16"
                        Margin="0,-1,0,-3"
                        Source="/Assets/icon/icon_ui_roulette.png" />
                </ui:TitleBar.Icon>
            </ui:TitleBar>

            <control:EditorMenu Grid.Row="1" />

            <UniformGrid Grid.Column="1" Columns="2">
                <FrameworkElement x:Name="c2" />
            </UniformGrid>
            <UniformGrid Grid.Column="1" Columns="3">
                <FrameworkElement x:Name="c3" />
            </UniformGrid>

            <TabControl
                Grid.Row="1"
                Grid.RowSpan="4"
                Grid.Column="1"
                Margin="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Transparent"
                BorderBrush="Transparent"
                Visibility="{Binding IsSelectedItemVisible}">
                <TabItem
                    x:Name="tab1"
                    Width="{Binding ElementName=c3, Path=ActualWidth}"
                    Foreground="White"
                    Header="{x:Static rs:Resources.NPCEditor_NPCData}"
                    Style="{StaticResource lb_tab}">
                    <TabControl
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Margin="0,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="Transparent">
                        <TabItem
                            Width="{Binding ElementName=c2, Path=ActualWidth}"
                            Height="Auto"
                            Foreground="White"
                            Header="{x:Static rs:Resources.NPCEditor_NPCInfo}"
                            Style="{StaticResource lb_tab}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_NPCInstanceID}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nID], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nID" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_NPCID}" />
                                    <ComboBox
                                        Width="Auto"
                                        Height="24"
                                        DisplayMemberPath="Name"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding DataContext.NpcListItems, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        SelectedValue="{Binding DataTableManager.SelectedItem[nNpcID], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                        SelectedValuePath="ID"
                                        Style="{StaticResource ComboBoxStyle}"
                                        Template="{StaticResource lb_combobox}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nNpcID" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_NPCRole}" />
                                    <ComboBox
                                        Width="Auto"
                                        Height="24"
                                        DisplayMemberPath="Name"
                                        IsReadOnly="True"
                                        ItemsSource="{Binding DataContext.StringItems, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        SelectedValue="{Binding DataTableManager.SelectedItem[nNPCRole], Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                        SelectedValuePath="ID"
                                        Style="{StaticResource ComboBoxStyle}"
                                        Template="{StaticResource lb_combobox}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nNPCRole" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_Group}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nGroup], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nGroup" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_LookAtType}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nLookAtType], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nLookAtType" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_LookAtRange}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[fLookAtRange], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="fLookAtRange" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="6"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_SpriteName}" />
                                    <TextBox
                                        Width="Auto"
                                        Height="30"
                                        Margin="0,0,0,0"
                                        FontSize="12"
                                        Template="{StaticResource lb_textbox11}"
                                        Text="{Binding DataTableManager.SelectedItem[szSpriteName], Mode=TwoWay}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="szSpriteName" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="7"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="4"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        Foreground="Aqua"
                                        Text="{Binding DataTableManager.SelectedItemString[wszDesc]}" />
                                    <TextBlock
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        Foreground="Aqua"
                                        Text="{Binding NpcRoleText}" />
                                    <Image
                                        Width="305"
                                        Height="404"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Source="{Binding DataTableManager.SelectedItem[szSpriteName], Converter={StaticResource IconNameToImageSourceConverter}}"
                                        Stretch="Fill">
                                        <Image.LayoutTransform>
                                            <ScaleTransform ScaleX="0.6" ScaleY="0.6" />
                                        </Image.LayoutTransform>
                                    </Image>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_Level}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        ValidationMode="Disabled"
                                        Value="{Binding DataTableManager.SelectedItem[nLevel], Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nLevel" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_MoveSpeed01}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[fMove01Speed], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="fMove01Speed" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_MoveSpeed02}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[fMove02Speed], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="fMove02Speed" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_HPClass}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nHPClass], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nHPClass" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_HPRevision}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[fHPRevision], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="fHPRevision" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_MPClass}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nMPClass], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nMPClass" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="3"
                                    Grid.Column="3"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_MPRevision}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[fMPRevision], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="fMPRevision" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_Name}" />
                                    <TextBox
                                        Width="Auto"
                                        Height="30"
                                        Margin="0,0,0,0"
                                        d:Text="{x:Static rs:Resources.Name}"
                                        FontSize="12"
                                        Template="{StaticResource lb_textbox11}"
                                        Text="{Binding DataTableManager.SelectedItemString[wszDesc], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="wszDesc" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemStringValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="5"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_InternalName}" />
                                    <TextBox
                                        Width="Auto"
                                        Height="30"
                                        Margin="0,0,0,0"
                                        d:Text="Title Description"
                                        FontSize="12"
                                        Template="{StaticResource lb_textbox11}"
                                        Text="{Binding DataTableManager.SelectedItem[szName], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="szName" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.Editor_InternalDescription}" />
                                    <TextBox
                                        Width="Auto"
                                        Height="30"
                                        Margin="0,0,0,0"
                                        d:Text="{x:Static rs:Resources.Name}"
                                        FontSize="12"
                                        Template="{StaticResource lb_textbox11}"
                                        Text="{Binding DataTableManager.SelectedItem[wszDesc], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="wszDesc" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                        <TabItem
                            Width="{Binding ElementName=c2, Path=ActualWidth}"
                            Height="Auto"
                            Foreground="White"
                            Header="{x:Static rs:Resources.NPCEditor_SkillData}"
                            Style="{StaticResource lb_tab}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_FrantzSkill}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nSkillFrantz00], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nSkillFrantz00" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_AngelaSkill}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nSkillAngela00], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nSkillAngela00" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_TudeSkill}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
                                        Value="{Binding DataTableManager.SelectedItem[nSkillTude00], Mode=TwoWay, UpdateSourceTrigger=Explicit}">
                                        <i:Interaction.Behaviors>
                                            <bh:DataRowViewBehavior Column="nSkillTude00" UpdateItemValueCommand="{Binding DataTableManager.UpdateItemValueCommand}" />
                                        </i:Interaction.Behaviors>
                                    </ui:NumberBox>
                                </StackPanel>
                                <StackPanel
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Margin="5,0,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Orientation="Vertical">
                                    <TextBlock Foreground="White" Text="{x:Static rs:Resources.NPCEditor_NatashaSkill}" />
                                    <ui:NumberBox
                                        Width="Auto"
                                        Margin="0,0,0,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Top"
                                        Maximum="2147483647"
                                        Minimum="0"
