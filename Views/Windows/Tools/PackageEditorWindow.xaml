                                        <DataTemplate>
                                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                                <TextBlock Foreground="White">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding
                                                                Converter="{StaticResource IndexToNumberConverter}"
                                                                Path="(ItemsControl.AlternationIndex)"
                                                                RelativeSource="{RelativeSource AncestorType=ContentPresenter}" />
                                                            <Binding Source="{x:Static rs:Resources.Effect}" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <ComboBox
                                                    Width="Auto"
                                                    Height="24"
                                                    Margin="0,0,0,0"
                                                    IsEnabled="{Binding DataContext.IsPackageEffectEnabled, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    IsReadOnly="True"
                                                    ItemsSource="{Binding DataContext.PackageEffectItems, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    SelectedValue="{Binding EffectCode, UpdateSourceTrigger=PropertyChanged}"
                                                    SelectedValuePath="ID"
                                                    Style="{StaticResource ComboBoxStyle}"
                                                    Template="{StaticResource lb_combobox}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                            <StackPanel
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Orientation="Vertical">
                                <ItemsControl AlternationCount="{Binding DataContext.PackageEffects.Count, RelativeSource={RelativeSource AncestorType=Window}}" ItemsSource="{Binding DataContext.PackageEffects, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                                <TextBlock Foreground="White">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0} {1}">
                                                            <Binding
                                                                Converter="{StaticResource IndexToNumberConverter}"
                                                                Path="(ItemsControl.AlternationIndex)"
                                                                RelativeSource="{RelativeSource AncestorType=ContentPresenter}" />
                                                            <Binding Source="{x:Static rs:Resources.PackageEditor_EffectValue}" />
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                </TextBlock>
                                                <ui:NumberBox
                                                    Width="Auto"
                                                    MinWidth="120"
                                                    Margin="0,0,0,0"
                                                    IsEnabled="{Binding DataContext.IsPackageEffectEnabled, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    LargeChange="{Binding EffectValueLargeIncrement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Maximum="{Binding EffectValueMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Minimum="{Binding EffectValueMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    SmallChange="{Binding EffectValueSmallIncrement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    Value="{Binding EffectValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                    <TabItem
                        x:Name="tab3"
                        Width="{Binding ElementName=c1, Path=ActualWidth}"
                        Foreground="White"
                        Header="{x:Static rs:Resources.PackageEditor_PackageItems}"
                        Style="{StaticResource lb_tab}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Image
                                Grid.Row="0"
                                Margin="0,5,0,5"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Cursor="Help"
                                Source="/Assets/icon/icon_help_tip.png"
                                Stretch="None"
                                ToolTip="{x:Static rs:Resources.AttachItemHelp}" />
                            <StackPanel
                                Grid.Row="1"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                Orientation="Horizontal">
                                <ItemsControl AlternationCount="{Binding DataContext.PackageItems.Count, RelativeSource={RelativeSource AncestorType=Window}}" ItemsSource="{Binding DataContext.PackageItems, RelativeSource={RelativeSource AncestorType=Window}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel
                                                Grid.Column="0"
                                                Margin="0,0,0,0"
                                                HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                                <TextBlock
                                                    Margin="0,0,10,0"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Background="Transparent"
                                                    FontSize="12"
                                                    Foreground="Gold"
                                                    Style="{StaticResource ArialMS}"
                                                    Text="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}, Converter={StaticResource IndexToNumberConverter}}" />
                                                <control:ItemSlot
                                                    AddItemCommand="{Binding DataContext.AddItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=ContentPresenter}}"
                                                    ItemDataViewModel="{Binding ItemDataViewModel}"
                                                    ItemNameVisibility="Visible"
                                                    RemoveItemCommand="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </DataTemplate>

        <!--  Template for ConditionSelectItemDatagrid  -->
        <DataTemplate x:Key="ConditionSelectItemDatagrid">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="dataGridView"
                    Grid.Row="0"
                    Height="400"
                    MinWidth="550"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    bh:DataGridBehavior.EnableScrollIntoView="True"
                    bh:DataGridBehavior.SelectedRow="{Binding DataContext.DataTableManager.SelectedRow, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnWidth="*"
                    EnableRowVirtualization="True"
                    HeadersVisibility="Column"
                    HorizontalScrollBarVisibility="Auto"
                    ItemsSource="{Binding DataContext.DataTableManager.DataTable, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    SelectedItem="{Binding DataContext.DataTableManager.SelectedItem, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    Template="{StaticResource lb_datagrid}">
                    <DataGrid.InputBindings>
                        <KeyBinding
                            Key="I"
                            Command="{Binding DataContext.DataTableManager.AddNewRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="D"
                            Command="{Binding DataContext.DataTableManager.DuplicateSelectedRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Control" />
                        <KeyBinding Key="Delete" Command="{Binding DataContext.DataTableManager.DeleteSelectedRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataContext.DataTableManager.UndoChangesCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataContext.DataTableManager.RedoChangesCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl+Shift" />
                        <KeyBinding
                            Key="F"
                            Command="{Binding DataContext.OpenSearchDialogCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            CommandParameter="Find"
                            Modifiers="Ctrl" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding nID}"
                            Header="ID"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding szName}"
                            Header="{x:Static rs:Resources.Name}"
                            IsReadOnly="True" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock
                    x:Name="lbTotalItem"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    d:Text="Showing {0}/{1} Items"
                    Foreground="Gold"
                    Style="{StaticResource ArialMS}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{x:Static rs:Resources.DatagridTotalItems}">
                            <Binding ElementName="dataGridView" Path="Items.Count" />
                            <Binding Path="DataContext.DataTableManager.DataTable.Rows.Count" RelativeSource="{RelativeSource AncestorType=ContentControl}" />
                        </MultiBinding>
                    </TextBlock.Text>
                </TextBlock>
            </Grid>
        </DataTemplate>
        <!--  Template for UnionPackageDatagrid  -->
        <DataTemplate x:Key="UnionPackageDatagrid">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <DataGrid
                    x:Name="dataGridView"
                    Grid.Row="0"
                    Height="400"
                    MinWidth="550"
                    Margin="5,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    bh:DataGridBehavior.EnableScrollIntoView="True"
                    bh:DataGridBehavior.SelectedRow="{Binding DataContext.DataTableManager.SelectedRow, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    AutoGenerateColumns="False"
                    CanUserAddRows="False"
                    ColumnWidth="*"
                    EnableRowVirtualization="True"
                    HeadersVisibility="Column"
                    HorizontalScrollBarVisibility="Auto"
                    ItemsSource="{Binding DataContext.DataTableManager.DataTable, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    SelectedItem="{Binding DataContext.DataTableManager.SelectedItem, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                    SelectionMode="Single"
                    SelectionUnit="FullRow"
                    Template="{StaticResource lb_datagrid}">
                    <DataGrid.InputBindings>
                        <KeyBinding
                            Key="I"
                            Command="{Binding DataContext.DataTableManager.AddNewRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="D"
                            Command="{Binding DataContext.DataTableManager.DuplicateSelectedRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Control" />
                        <KeyBinding Key="Delete" Command="{Binding DataContext.DataTableManager.DeleteSelectedRowCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataContext.DataTableManager.UndoChangesCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl" />
                        <KeyBinding
                            Key="Z"
                            Command="{Binding DataContext.DataTableManager.RedoChangesCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            Modifiers="Ctrl+Shift" />
                        <KeyBinding
                            Key="F"
                            Command="{Binding DataContext.OpenSearchDialogCommand, RelativeSource={RelativeSource AncestorType=ContentControl}}"
                            CommandParameter="Find"
                            Modifiers="Ctrl" />
                    </DataGrid.InputBindings>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="Auto"
                            Binding="{Binding nID}"
                            Header="ID"
                            IsReadOnly="True" />
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding wszName}"
                            Header="{x:Static rs:Resources.Name}"
                            IsReadOnly="True" />
                        <DataGridTemplateColumn
                            Width="36"
                            Header="{x:Static rs:Resources.Icon}"
                            IsReadOnly="True">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Image
                                        Width="36"
                                        Height="36"
                                        Source="{Binding szPackageIcon, Converter={StaticResource IconNameToImageSourceConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock
                    x:Name="lbTotalItem"
                    Grid.Row="1"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    d:Text="Showing {0}/{1} Items"
                    Foreground="Gold"
                    Style="{StaticResource ArialMS}">
                    <TextBlock.Text>
                        <MultiBinding StringFormat="{x:Static rs:Resources.DatagridTotalItems}">
                            <Binding ElementName="dataGridView" Path="Items.Count" />
                            <Binding Path="DataContext.DataTableManager.DataTable.Rows.Count" RelativeSource="{RelativeSource AncestorType=ContentControl}" />
                        </MultiBinding>
