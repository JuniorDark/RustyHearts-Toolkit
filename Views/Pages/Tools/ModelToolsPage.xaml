<Page
    x:Class="RHToolkit.Views.Pages.ModelToolsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RHToolkit.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pages="clr-namespace:RHToolkit.ViewModels.Pages"
    xmlns:rs="clr-namespace:RHToolkit.Properties"
    Title="Model Tools"
    d:DataContext="{d:DesignInstance local:ModelToolsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="0,5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Grid.Row="2"
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"
                Foreground="White"
                Text="Models Folder" />
            <TextBox
                Width="400"
                Height="40"
                Margin="10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                BorderThickness="0"
                Foreground="White"
                IsEnabled="{Binding ViewModel.IsTextBoxEnabled}"
                Tag="{x:Static rs:Resources.SelectFolder}"
                Template="{StaticResource lb_textbox}"
                Text="{Binding ViewModel.InputFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Command="{Binding ViewModel.SelectInputFolderCommand}"
                Content="{x:Static rs:Resources.SelectFolder}"
                Cursor="Hand"
                Foreground="White"
                Style="{StaticResource lb_def_button02}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="0,5"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                FontSize="20"
                Foreground="White"
                Text="Output Folder" />
            <TextBox
                Width="400"
                Height="40"
                Margin="10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                BorderThickness="0"
                Foreground="White"
                IsEnabled="{Binding ViewModel.IsTextBoxEnabled}"
                Tag="{x:Static rs:Resources.SelectFolder}"
                Template="{StaticResource lb_textbox}"
                Text="{Binding ViewModel.OutputFolder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Transparent"
                Command="{Binding ViewModel.SelectOutputFolderCommand}"
                Content="{x:Static rs:Resources.SelectFolder}"
                Cursor="Hand"
                Foreground="White"
                Style="{StaticResource lb_def_button02}" />
        </StackPanel>
        <Button
            Grid.Row="2"
            Width="150"
            Margin="10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Command="{Binding ViewModel.ExportFilesCommand}"
            Content="Export To FBX"
            Cursor="Hand"
            Foreground="White"
            Style="{StaticResource lb_def_button02}" />
        <TextBlock
            Grid.Row="3"
            Margin="10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            d:Text="Message"
            FontSize="15"
            Foreground="Gold"
            Text="{Binding ViewModel.ProgressMessage}"
            Visibility="{Binding ViewModel.IsProgressMessageVisible}" />
        <ProgressBar
            Grid.Row="4"
            Width="250"
            Height="30"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Maximum="{Binding ViewModel.ProgressBarMaximumValue, UpdateSourceTrigger=PropertyChanged}"
            Minimum="{Binding ViewModel.ProgressBarMiniumValue, UpdateSourceTrigger=PropertyChanged}"
            Visibility="{Binding ViewModel.IsProgressBarVisible}"
            Value="{Binding ViewModel.ProgressBarValue, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="5"
            Width="200"
            Margin="10,10"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Background="Transparent"
            Command="{Binding ViewModel.CancelOperationCommand}"
            Content="{x:Static rs:Resources.Cancel}"
            Cursor="Hand"
            Foreground="White"
            Style="{StaticResource lb_def_button02}"
            Visibility="{Binding ViewModel.IsCancelVisible}" />
    </Grid>
</Page>
