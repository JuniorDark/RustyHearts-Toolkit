<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  lb_def_box01  -->
    <ControlTemplate x:Key="lb_def_box01" TargetType="ContentControl">
        <Grid>
            <!--  Top-left corner  -->
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_title01.png"
                Stretch="None" />

            <!--  Top-right corner  -->
            <Image
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_title03.png"
                Stretch="None" />

            <!--  Bottom-left corner  -->
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base07.png"
                Stretch="None" />

            <!--  Bottom-right corner  -->
            <Image
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base09.png"
                Stretch="None" />

            <!--  Edges  -->
            <Image
                Height="23"
                Margin="23,0,23,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_title02.png"
                Stretch="Fill" />

            <Image
                Height="23"
                Margin="23,0,23,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base08.png"
                Stretch="Fill" />

            <Image
                Width="23"
                Margin="0,23,0,23"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base04.png"
                Stretch="Fill" />

            <Image
                Width="23"
                Margin="0,23,0,23"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base06.png"
                Stretch="Fill" />

            <!--  Center  -->
            <Image
                Margin="23,23,23,23"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box01/lb_def_box01_base05.png"
                Stretch="Fill" />

            <!--  Content  -->
            <ContentPresenter
                Margin="0,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Content="{TemplateBinding Content}" />
        </Grid>
    </ControlTemplate>

</ResourceDictionary>