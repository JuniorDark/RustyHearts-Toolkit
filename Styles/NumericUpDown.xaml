<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="NumericUpDownTemplate" TargetType="{x:Type TextBox}">
        <Grid Height="100">
            <TextBox
                x:Name="part_TextBox"
                Height="38"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="12"
                Foreground="Gold"
                MaxLength="11"
                Template="{DynamicResource lb_textbox}"
                Text="{Binding Value, ElementName=part_Scrollbar, StringFormat={}{0:F0}, Mode=TwoWay}" />
            <ScrollBar
                x:Name="part_Scrollbar"
                Grid.Column="1"
                Height="32"
                Margin="8,4,2,4"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                BorderBrush="{x:Null}"
                Maximum="1000"
                Minimum="0"
                Orientation="Vertical"
                SmallChange="1"
                Style="{DynamicResource CustomScrollBarStyle}" />
        </Grid>
    </ControlTemplate>
</ResourceDictionary>