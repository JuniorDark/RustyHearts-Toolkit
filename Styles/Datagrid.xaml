<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  lb_def_box04  -->
    <ControlTemplate x:Key="lb_def_box04" TargetType="ContentControl">
        <Grid>
            <!--  Corners  -->
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_01.png"
                Stretch="None" />
            <Image
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_03.png"
                Stretch="None" />
            <Image
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_07.png"
                Stretch="None" />
            <Image
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_09.png"
                Stretch="None" />

            <!--  Edges  -->
            <Image
                Height="9"
                Margin="9,0,9,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_02.png"
                Stretch="Fill">
                <Image.OpacityMask>
                    <ImageBrush
                        ImageSource="/Assets/images/window/lb_def_box04/lb_def_box04_02.png"
                        Stretch="None"
                        TileMode="Tile"
                        Viewport="0,0,1,0.25"
                        ViewportUnits="Absolute" />
                </Image.OpacityMask>
            </Image>

            <Image
                Height="9"
                Margin="9,0,9,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_08.png"
                Stretch="Fill">
                <Image.OpacityMask>
                    <ImageBrush
                        ImageSource="/Assets/images/window/lb_def_box04/lb_def_box04_08.png"
                        Stretch="None"
                        TileMode="Tile"
                        Viewport="0,0,1,0.25"
                        ViewportUnits="Absolute" />
                </Image.OpacityMask>
            </Image>

            <Image
                Width="9"
                Margin="0,9,0,9"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_04.png"
                Stretch="Fill">
                <Image.OpacityMask>
                    <ImageBrush
                        ImageSource="/Assets/images/window/lb_def_box04/lb_def_box04_04.png"
                        Stretch="None"
                        TileMode="Tile"
                        Viewport="0,0,0.25,1"
                        ViewportUnits="Absolute" />
                </Image.OpacityMask>
            </Image>

            <Image
                Width="9"
                Margin="0,9,0,9"
                HorizontalAlignment="Right"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_06.png"
                Stretch="Fill">
                <Image.OpacityMask>
                    <ImageBrush
                        ImageSource="/Assets/images/window/lb_def_box04/lb_def_box04_06.png"
                        Stretch="None"
                        TileMode="Tile"
                        Viewport="0,0,0.25,1"
                        ViewportUnits="Absolute" />
                </Image.OpacityMask>
            </Image>

            <!--  Center  -->
            <Image
                Margin="9,9,9,9"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Source="/Assets/images/window/lb_def_box04/lb_def_box04_05.png"
                Stretch="UniformToFill" />

            <!--  Content  -->
            <ContentPresenter
                Margin="9,9,9,9"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Content="{TemplateBinding Content}" />
        </Grid>
    </ControlTemplate>

    <ControlTemplate x:Key="CustomDataGridTemplate" TargetType="DataGrid">
        <Border
            Padding="{TemplateBinding Padding}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
            <ContentControl Template="{StaticResource lb_def_box04}">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Header Row  -->
                            <RowDefinition Height="*" />
                            <!--  Data Rows  -->
                        </Grid.RowDefinitions>

                        <!--  Headers  -->
                        <DataGridColumnHeadersPresenter
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />

                        <!--  DataGrid Rows  -->
                        <ItemsPresenter Grid.Row="1" />
                    </Grid>
                </ScrollViewer>
            </ContentControl>
        </Border>
    </ControlTemplate>


    <!--  Style for DataGridCell  -->
    <Style TargetType="DataGridCell">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Gold" />
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="Blue" />
                <Setter Property="Foreground" Value="Gold" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!--  Style for DataGridColumnHeader  -->
    <Style TargetType="DataGridColumnHeader">
        <Setter Property="Background" Value="Blue" />
        <Setter Property="Foreground" Value="Gold" />
    </Style>

    <!--  Style for DataGridRow  -->
    <Style TargetType="DataGridRow">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="Gold" />
    </Style>

</ResourceDictionary>
